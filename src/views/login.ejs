<div class="flex items-center justify-center h-screen">
    <div class="bg-white p-6 rounded-xl shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold mb-4 text-center">
            Login
        </h1>

        <form action="/auth/login" method="post" class="space-y-4">
            <div>
                <label class="black mb-1 font-medium">
                    Email
                </label>
                <input type="email" name="email" class="w-full boarder px-3 py-2 rounded-md" required />
            </div>
            <div>
                <label class="black mb-1 font-medium">
                    Password
                </label>
                <input type="password" name="password" class="w-full boarder px-3 py-2 rounded-md" required />
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:g-blue-700 transition">
                Login
            </button>
            <% if (error) { %>
                <p class="text-red-600 mt-2 text-sm text-center"><%= error %></p>
            <% } %>
        </form>
    </div>
</div>