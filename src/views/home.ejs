<div class="max-w-2xl mx-auto mt-10 px-4">
    <h1 class="text-2xl font-bold mb-4 text-center">
        ðŸ”— Link Shortener
    </h1>

    <form id="shortenForm" class="space-y-4 bg-white p-6 rounded-lg shadow-md">
        <div class="form-group">
            <label for="originalUrl" class="block font-medium text-gray-700">Original URL:</label>
            <input type="url" id="originalUrl" name="originalUrl" required
                   placeholder="https://example.com/very-long-url"
                   class="w-full border border-gray-300 rounded px-3 py-2 focus:ring-2 focus:ring-blue-500" />
        </div>

        <div class="form-group">
            <label for="customCode" class="block font-medium text-gray-700">Custom Code (optional):</label>
            <input type="text" id="customCode" name="customCode"
                   placeholder="my-custom-link"
                   class="w-full border border-gray-300 rounded px-3 py-2 focus:ring-2 focus:ring-blue-500" />
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
            Shorten URL
        </button>

        <div id="result" class="result hidden mt-4 p-4 rounded"></div>
    </form>

    <div class="links-list mt-6">
        <h2 class="text-xl font-semibold mb-2">Recent Links</h2>
        <div id="linksList"></div>
    </div>
</div>

