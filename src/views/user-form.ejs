<div class="max-w-md mx-auto mt-10 px-4">
    <h1 class="text-2xl font-bold mb-4">
        <%= mode === 'edit' ? 'Edit User' : 'Add User' %>
    </h1>

    <% if (error) { %>
        <div class="bg-red-500 text-red-800 p-2 rounded mb-4">
            <%= error %>
        </div>
    <% } %>

    <form method="POST" action="<%= mode === 'edit' ? '/users/' + user.id + '/edit' : '/users/create' %>"
          class="space-y-4 bg-white p-6 rounded-lg shadow-md">
        <div>
            <label class="black text-gray-700">Email</label>
            <input type="email" name="email" value="<%= user ? user.email : '' %>" required
                   class="w-full border px-3 py-2 rounded focus:rind-2 focus:ring-blue-500" />
        </div>
        <% if (mode === 'create') { %>
            <div>
                <label class="black text-gray-700">Password</label>
                <input type="password" name="password" required
                       class="w-full border px-3 py-2 rounded focus:rind-2 focus:ring-blue-500" />
            </div>
        <% } %>
        <div>
            <label class="black text-gray-700">Role</label>
            <select name="role" class="w-full border px-3 py-2 rounded focus:rind-2 focus:ring-blue-500">
                <option value="user" <%= user && user.role === 'user' ? 'selected' : '' %>>User</option>
                <option value="admin" <%= user && user.role === 'admin' ? 'selected' : '' %>>Admin</option>
            </select>
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
            <%= mode === 'edit' ? 'Update User' : 'Create User' %>
        </button>
    </form>
</div>